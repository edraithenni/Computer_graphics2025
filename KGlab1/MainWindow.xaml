<Window x:Class="KGlab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CMYK-RGB-HLS Converter"
        Width="900" Height="600"
        Background="#FF1E1E1E">
	<Grid Margin="20">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- CMYK -->
		<Border Grid.Column="0" Margin="10" Background="#222" Padding="10" CornerRadius="10">
			<StackPanel>
				<TextBlock Text="CMYK" FontSize="20" Foreground="White" Margin="0 0 0 10" FontWeight="Bold"/>
				<StackPanel>
					<Label Foreground="White">Cyan</Label>
					<Slider x:Name="C_Slider" Minimum="0" Maximum="100" ValueChanged="CMYK_Changed"/>
					<TextBox x:Name="C_Text" Text="0" Margin="0,5" TextChanged="CMYK_TextChanged"/>
					<Label Foreground="White">Magenta</Label>
					<Slider x:Name="M_Slider" Minimum="0" Maximum="100" ValueChanged="CMYK_Changed"/>
					<TextBox x:Name="M_Text" Text="0" Margin="0,5" TextChanged="CMYK_TextChanged"/>
					<Label Foreground="White">Yellow</Label>
					<Slider x:Name="Y_Slider" Minimum="0" Maximum="100" ValueChanged="CMYK_Changed"/>
					<TextBox x:Name="Y_Text" Text="0" Margin="0,5" TextChanged="CMYK_TextChanged"/>
					<Label Foreground="White">Key (Black)</Label>
					<Slider x:Name="K_Slider" Minimum="0" Maximum="100" ValueChanged="CMYK_Changed"/>
					<TextBox x:Name="K_Text" Text="0" Margin="0,5" TextChanged="CMYK_TextChanged"/>
				</StackPanel>
			</StackPanel>
		</Border>

		<!-- Preview -->
		<StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
			<Border x:Name="ColorPreview" Width="200" Height="200" Background="White" CornerRadius="20" BorderBrush="Gray" BorderThickness="2"/>
			<Button Content="Select color" Margin="0,20,0,0" Padding="10" Click="PickColor_Click"/>
		</StackPanel>

		<!-- RGB + HLS -->
		<Border Grid.Column="2" Margin="10" Background="#222" Padding="10" CornerRadius="10">
			<StackPanel>
				<TextBlock Text="RGB" FontSize="20" Foreground="White" Margin="0 0 0 10" FontWeight="Bold"/>
				<Label Foreground="White">Red</Label>
				<Slider x:Name="R_Slider" Minimum="0" Maximum="255" ValueChanged="RGB_Changed"/>
				<TextBox x:Name="R_Text" Text="0" Margin="0,5" TextChanged="RGB_TextChanged"/>
				<Label Foreground="White">Green</Label>
				<Slider x:Name="G_Slider" Minimum="0" Maximum="255" ValueChanged="RGB_Changed"/>
				<TextBox x:Name="G_Text" Text="0" Margin="0,5" TextChanged="RGB_TextChanged"/>
				<Label Foreground="White">Blue</Label>
				<Slider x:Name="B_Slider" Minimum="0" Maximum="255" ValueChanged="RGB_Changed"/>
				<TextBox x:Name="B_Text" Text="0" Margin="0,5" TextChanged="RGB_TextChanged"/>

				<Separator Margin="10"/>

				<TextBlock Text="HLS" FontSize="20" Foreground="White" Margin="0 0 0 10" FontWeight="Bold"/>
				<Label Foreground="White">Hue</Label>
				<Slider x:Name="H_Slider" Minimum="0" Maximum="360" ValueChanged="HLS_Changed"/>
				<TextBox x:Name="H_Text" Text="0" Margin="0,5" TextChanged="HLS_TextChanged"/>
				<Label Foreground="White">Lightness</Label>
				<Slider x:Name="L_Slider" Minimum="0" Maximum="100" SmallChange="1" ValueChanged="HLS_Changed"/>
				<TextBox x:Name="L_Text" Text="0" Margin="0,5" TextChanged="HLS_TextChanged"/>
				<Label Foreground="White">Saturation</Label>
				<Slider x:Name="S_Slider" Minimum="0" Maximum="100" SmallChange="1" ValueChanged="HLS_Changed"/>
				<TextBox x:Name="S_Text" Text="0" Margin="0,5" TextChanged="HLS_TextChanged"/>
			</StackPanel>
		</Border>
	</Grid>
</Window>
